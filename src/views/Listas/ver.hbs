 <div class = "container p-4">
<div class="row">
        {{#each toy}}
            <div class= "col-md-5">
                <div class= "card text-center">
                    <div class= "card-body">
                        <h3 class= "card-title text-uppercase">
                            {{toy.nombre}}
                        </h3>
                        <p class= "m-2">{{toy.Description}}</p>
                        <p>{{toy.price}}</p>
                        <p>{{timeago created_at}}</p>
                        <a href="/product/delete/{{toy.id}}"class="btn btn-danger" >Borrar de la lista</a>
                        <a href="/product/edit/{{toy.id}}" class="btn btn-secondary">Edit</a>
                    </div>
                </div>
            </div>
            {{else}}
                <div class="col-md-4 mx auto">
                    <div class="card card-body text-center">
                        <p>No hay productos aun</p>
                        <a href="/product/newproducto">Crea uno!</a>
                    </div>
                </div>
        {{/each}}
</div>
<a href="/product/newproducto"class="btn btn-success">Agregar</a>
</div>