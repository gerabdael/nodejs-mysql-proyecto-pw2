<div class="container">
<div class="col-lg-7 tm-contact-left">
      <div class="col-12">
                    <h2 class="tm-color-primary tm-post-title tm-mb-60">Crea tu cuenta</h2>
                </div>
                    <form  action="/profile/edit/{{user.id}}" method="POST"class="mb-5 ml-auto mr-0 tm-contact-form">  
                        <div class="form-group row mb-4">
                            <label for="name" class="col-sm-3 col-form-label text-right tm-color-primary">Nombre completo</label>
                            <div class="col-sm-9">
                                <input class="form-control mr-0 ml-auto" value="{{user.fullname}}"name="fullname" id="nombrec" type="text" required>                            
                            </div>
                        </div>

                        <div class="form-group row mb-4">
                            <label for="name" class="col-sm-3 col-form-label text-right tm-color-primary">Usuario*</label>
                            <div class="col-sm-9">
                                <input class="form-control mr-0 ml-auto"value="{{user.username}}" name="username" id="name" type="text" required>                            
                            </div>
                        </div>
                        
                        <div class="form-group row mb-4">
                            <label for="email" class="col-sm-3 col-form-label text-right tm-color-primary">Correo*</label>
                            <div class="col-sm-9">
                                <input class="form-control mr-0 ml-auto" value="{{user.correo}}" name="correo" id="email" type="email" required>
                            </div>
                        </div>

                        <div class="form-group row mb-4">
                            <label for="subject" class="col-sm-3 col-form-label text-right tm-color-primary">Contraseña*</label>
                            <div class="col-sm-9">
                                <input class="form-control mr-0 ml-auto" value="{{user.password}}"  name="password" id="subject" type="password" required>
                                <small id="passwordHelpInline" class="text-muted">
                                    Mínimo 8 caracteres, 1 numero y 1 MAYUSCULA.
                                </small><br>
                                <label for="subject" class="col-sm-3 col-form-label text-right tm-color-primary">Avatar*</label>
                                <div class="col-sm-9">
                                <div class="custom-file">
                                    <input type="file" class="custom-file-input" name="IMAG" id="customFileLang" lang="es"  size="50px">
                                    <label class="custom-file-label" for="customFileLang" style="font-size: medium; border-radius: 0mm; border-color: black; color:rgb(161, 161, 161);">Seleccionar imagen...</label>
                                </div><br><br>
                    
                                <div class="custom-control custom-radio custom-control-inline">
                                    <input type="radio" id="customRadioInline1" name="public" value= 1 class="custom-control-input">
                                    <label class="custom-control-label" for="customRadioInline1" style="font-size:large;">Usuario Público </label>
                                </div>

                                <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" id="customRadioInline2" name="public" value=0 class="custom-control-input">
                                <label class="custom-control-label" for="customRadioInline2" style="font-size:large;">Usuario Privado </label>
                                </div>
                                                        <div class="form-group row text-right">
                            <div class="col-12">
                                <button class="tm-btn tm-btn-primary tm-btn-small">configurar cuenta</button>                        
                            </div>                            
                        </div>  

                    </form>

                            </div>                        
                        </div>